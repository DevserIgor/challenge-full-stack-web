{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "standard-with-typescript",
    "plugin:vue/vue3-strongly-recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "singe"],
    "indent": ["error", 2],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "vue/no-multi-spaces": 1
  }
}
